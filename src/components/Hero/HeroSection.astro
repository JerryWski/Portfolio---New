---
import { Image } from 'astro:assets';
import mephoto from '../../../public/me.webp';
import Button from '../../utils/Button.astro';
import ContactIcons from '../../utils/ContactIcons.astro';
---

<section class='block'>
  <div class='hero-section'>
    <div class='wrapper'>
      <div class='hero-container'>
        <h1 class='hero-heading'>
          Hi, I'm
          <span>Jarek</span>
          Web Developer
        </h1>
        <p class='hero-subheading'>
          Passionate about coding beautiful things, I love my work. Let's
          collaborate and create something amazing!
        </p>
        <Button />
      </div>
      <div class='hero-image--wrapper'>
        <Image
          class='hero-image'
          src={mephoto}
          alt='man-selfie'
          loading={'eager'}
        />
      </div>
    </div>
    <button class='btn-hero'
      ><a class='btn-hero--link' aria-label='link to contact list' href='/'
        >Hire me</a
      >
    </button>
    <div class='hero-line'></div>
    <ContactIcons class='test2' />
  </div>
</section>

<style>
  .block {
    position: relative;
  }
  .block::after {
    position: absolute;
    z-index: 1;
    content: '';
    top: -86%;
    height: 145%;
    width: 76%;
    left: -32%;
    background: linear-gradient(98.23deg, rgb(0, 0, 0), #af79ff);
    -webkit-mask-image: radial-gradient(rgba(0, 0, 0, 0.7), transparent 70%);
    mask-image: radial-gradient(rgba(0, 0, 0, 0.6), transparent 70%);
  }
  .hero-section {
    padding: 20px;
    /* height: 100vh; */
    max-width: 1440px;
    margin: 0 auto;
    background-color: var(--bg-graff);
    position: relative;
  }

  .hero-section::after,
  .hero-section::before {
    content: '';
    position: absolute;
    background-image: url('/hero-bg2.webp');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center -90px;
    width: 100%;
    transform: scaleX(-1);
    height: 100%;
    z-index: 0;
    opacity: 0.05;
    -webkit-mask-image: linear-gradient(
      to bottom,
      transparent 1%,
      #256435 40%,
      transparent
    );
    mask-image: linear-gradient(
      to bottom,
      transparent 1%,
      #256435 15%,
      transparent
    );
    top: 80px;
    left: 0;
  }
  .hero-section::before {
    background-image: url('/wheels.webp');
    animation: glow 6s ease-out infinite both;
    opacity: 0;
  }
  .wrapper {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: 10px;
  }
  .btn-hero {
    display: block;
    margin: 100px auto 40px auto;
    position: relative;
    width: 78%;
    font-weight: 900;
    cursor: pointer;
    padding: 10px 40px;
    border-radius: 15px;
    background-color: var(--green);
    border: none;
    transition: 0.3s background-color ease-in-out;
  }
  .btn-hero:hover {
    background-color: var(--wh);
  }
  .btn-hero--link {
    text-decoration: none;
    font-family: var(--second-font);
    font-size: 1.5rem;
    color: var(--bg-black);
  }
  .hero-heading {
    font-family: var(--main-font);
    font-weight: 900;
    z-index: 1;
    position: relative;
    font-size: 3rem;
    padding-top: 40px;
    max-width: 450px;
    text-wrap: balance;
    line-height: 62px;
  }
  .hero-heading span {
    color: var(--green);
  }
  .hero-subheading {
    color: var(--light-grey);
    font-weight: 600;
    /* text-wrap: balance; */
    max-width: 380px;
    margin-top: 20px;
    position: relative;
    z-index: 1;
    font-family: var(--second-font);
  }
  .hero-image--wrapper {
    max-width: 200px;
    position: relative;
    margin-top: 40px;
  }
  .hero-image {
    position: relative;
    z-index: 2;
    height: auto;
    border-radius: 7px;
    border-bottom-left-radius: 0px;
    border-top-right-radius: 0px;
    width: 100%;
    overflow: hidden;
    object-fit: contain;
  }
  .hero-image--wrapper::after {
    content: '';
    position: absolute;
    bottom: -16px;
    left: -20px;
    z-index: 1;
    width: 50%;
    height: 50%;
    border-left: 22px solid var(--grey-font);
    border-bottom: 22px solid var(--green);
    box-sizing: border-box;
  }
  .hero-image--wrapper::before {
    border-right: 22px solid var(--grey-font);
    border-top: 22px solid var(--green);
    content: '';
    position: absolute;
    z-index: 3;
    width: 50%;
    height: 50%;
    top: -21px;
    right: -22px;
    box-sizing: border-box;
  }
  .hero-line {
    max-width: 1440px;
    height: 2px;
    opacity: 0.5;
    background-color: var(--grey-font);
    position: relative;
  }
  .hero-line::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 10px;
    height: 10px;
    background-image: url('/dot.webp');
    background-repeat: no-repeat;
    background-size: contain;
  }
  .hero-line::after {
    content: '';
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 10px;
    height: 10px;
    background-image: url('/dot.webp');
    background-repeat: no-repeat;
    background-size: contain;
  }

  @media (min-width: 900px) {
    .hero-section {
      mask-image: radial-gradient(
        circle,
        rgba(0, 0, 0, 1) 70%,
        rgba(0, 0, 0, 0) 100%
      );
      -webkit-mask-image: radial-gradient(
        circle,
        rgba(0, 0, 0, 1) 90%,
        rgba(199, 146, 146, 0) 100%
      );
    }
    .hero-section::after,
    .hero-section::before {
      top: -22px;
    }
    .hero-container {
      max-width: 60%;
    }
    .btn-hero {
      display: none;
    }
    .hero-heading {
      font-size: 5rem;
      max-width: 100%;
      line-height: normal;
    }
    .hero-subheading {
      max-width: 100%;
      text-wrap: balance;
      font-size: 1.5rem;
    }
    .hero-image--wrapper {
      max-width: 300px;
      margin-top: 80px;
    }
    .hero-line {
      margin-top: 80px;
    }
  }
  @media (max-width: 750px) {
    .wrapper {
      flex-wrap: wrap;
    }
  }
  @keyframes glow {
    0% {
      opacity: 0.1;
    }
    25% {
      opacity: 0.4;
    }
    50% {
      opacity: 0.6;
    }
    75% {
      opacity: 0.4;
    }
    100% {
      opacity: 0.1;
    }
  }
</style>
