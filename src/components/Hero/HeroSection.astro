---
import { Image } from 'astro:assets';
import mephoto from '../../../public/me.webp';
import Button from '../../utils/Button.astro';
import ContactIcons from '../../utils/ContactIcons.astro';
import AudioButton from '../../utils/AudioButton.astro';
---

<section class='block'>
  <AudioButton />
  <div class='hero-section'>
    <div class='wrapper'>
      <div class='hero-container'>
        <h1 class='hero-heading'>
          Hi, I'm
          <span>Jarek</span>
          Web Developer
        </h1>
        <p class='hero-subheading'>
          Passionate about coding beautiful things. Let's collaborate and create
          something amazing!
        </p>
        <Button id='btn' />
      </div>
      <div class='hero-image--wrapper'>
        <Image
          class='hero-image'
          src={mephoto}
          alt='man-selfie'
          loading={'eager'}
        />
      </div>
    </div>
    <a aria-label='link to contact list' href='#contact' class='btn-hero'
      >Hire me
    </a>
    <div class='hero-line'></div>
    <ContactIcons class='test2' />
  </div>
</section>

<style>
  .block {
    position: relative;
  }
  .block::after {
    content: '';
    position: absolute;
    background-image: url('/hero-bg2.webp');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center 137px;
    width: 100%;
    transform: scaleX(-1);
    height: 65%;
    z-index: 0;
    opacity: 0.1;
    -webkit-mask-image: linear-gradient(
      to bottom,
      transparent 1%,
      #256435 40%,
      transparent
    );
    mask-image: linear-gradient(
      to bottom,
      transparent 1%,
      #256435 15%,
      transparent
    );
    top: 45px;
    left: 0;
  }
  .hero-section {
    padding: 20px;
    max-width: 1440px;
    margin: 0 auto;
    background-color: var(--bg-graff);
    position: relative;
    mask-image: radial-gradient(
      circle,
      rgba(0, 0, 0, 1) 70%,
      rgba(0, 0, 0, 0) 100%
    );
    -webkit-mask-image: radial-gradient(
      circle,
      rgba(0, 0, 0, 1) 90%,
      rgba(199, 146, 146, 0) 100%
    );
  }
  .wrapper {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    column-gap: 120px;
    row-gap: 20px;
  }
  .btn-hero {
    display: block;
    margin: 100px auto 40px auto;
    width: 78%;
    font-weight: 700;
    cursor: pointer;
    padding: 10px 40px;
    border-radius: 15px;
    background-color: var(--green);
    border: none;
    text-align: center;
    text-decoration: none;
    font-family: var(--second-font);
    font-size: 1.5rem;
    color: var(--bg-black);
    transition: 0.3s background-color ease-in-out;
  }
  .btn-hero:hover {
    background-color: var(--wh);
  }

  .hero-heading {
    font-family: var(--main-font);
    font-weight: 900;
    z-index: 100;
    position: relative;
    font-size: clamp(2.4rem, 3vw + 1.4rem, 4.2rem);
    padding-top: 40px;
    text-wrap: balance;
    line-height: 64px;
  }
  .hero-heading::before,
  .hero-heading::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }
  .hero-heading::before {
    background: rgb(26, 28, 32);
    animation: typewriter var(--typewriterSpeed)
      steps(var(--typewriterCharacters)) 1s forwards;
  }
  .hero-heading::after {
    width: 0.125em;
    background: rgb(6, 196, 116);
    animation:
      typewriter var(--typewriterSpeed) steps(var(--typewriterCharacters)) 1s
        forwards,
      blink 550ms steps(var(--typewriterCharacters)) infinite,
      disappear 1s steps(24) var(--typewriterSpeed) forwards;
  }
  .hero-heading span {
    color: var(--green);
  }
  .hero-subheading {
    color: var(--light-grey);
    font-weight: 600;
    max-width: 380px;
    font-size: clamp(0.8rem, 0.8vw + 0.8rem, 1.2rem);
    margin-top: 20px;
    position: relative;
    z-index: 1;
    font-family: var(--second-font);
    opacity: 0;
    transform: translateY(3rem);
    animation: fadeInUp 1s ease calc(var(--typewriterSpeed) + 1s) forwards;
  }
  .hero-container {
  }
  .hero-image--wrapper {
    max-width: 200px;
    position: relative;
    margin-top: 40px;
  }
  .hero-image {
    position: relative;
    z-index: 2;
    height: auto;
    border-radius: 7px;
    border-bottom-left-radius: 0px;
    border-top-right-radius: 0px;
    width: 100%;
    overflow: hidden;
    object-fit: contain;
  }
  .hero-image--wrapper::after {
    content: '';
    position: absolute;
    bottom: -20px;
    left: -20px;
    z-index: 1;
    width: 50%;
    height: 50%;
    border-left: 22px solid var(--grey-font);
    border-bottom: 22px solid var(--green);
    box-sizing: border-box;
  }
  .hero-image--wrapper::before {
    border-right: 22px solid var(--grey-font);
    border-top: 22px solid var(--green);
    content: '';
    position: absolute;
    z-index: 3;
    width: 50%;
    height: 50%;
    top: -22px;
    right: -22px;
    box-sizing: border-box;
  }
  .hero-line {
    max-width: 1440px;
    height: 2px;
    opacity: 0.5;
    background-color: var(--grey-font);
    position: relative;
  }
  .hero-line::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 10px;
    height: 10px;
    background-image: url('/dot.webp');
    background-repeat: no-repeat;
    background-size: contain;
  }
  .hero-line::after {
    content: '';
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 10px;
    height: 10px;
    background-image: url('/dot.webp');
    background-repeat: no-repeat;
    background-size: contain;
  }

  @media (min-width: 900px) {
    .block {
      overflow: hidden;
    }
    .block::after {
      top: -21%;
      height: 748px;
      left: 32%;
    }
    .hero-section {
      background-color: transparent;

      mask-image: radial-gradient(
        circle,
        rgba(0, 0, 0, 1) 70%,
        rgba(0, 0, 0, 0) 100%
      );
      -webkit-mask-image: radial-gradient(
        circle,
        rgba(0, 0, 0, 1) 90%,
        rgba(199, 146, 146, 0) 100%
      );
    }
    .hero-section::after,
    .hero-section::before {
      top: -22px;
    }
    .hero-section::before {
      animation: glow 6s ease-out infinite both;
    }
    .wrapper {
      gap: 190px;
    }
    .hero-container {
      max-width: 50%;
    }
    .btn-hero {
      display: none;
    }
    .hero-heading {
      display: block;
      max-width: 100%;
      line-height: 83px;
    }
    .hero-subheading {
      max-width: 100%;
      text-wrap: balance;
      font-size: 1.3rem;
    }
    .hero-image--wrapper {
      max-width: 300px;
      margin-top: 80px;
      margin-right: 20px;
    }
    .hero-line {
      margin-top: 80px;
    }
  }
  @media (max-width: 750px) {
    .wrapper {
      flex-wrap: wrap;
    }
  }
  @keyframes glow {
    0% {
      opacity: 0.1;
    }
    25% {
      opacity: 0.4;
    }
    50% {
      opacity: 0.6;
    }
    75% {
      opacity: 0.4;
    }
    100% {
      opacity: 0.1;
    }
  }

  @keyframes typewriter {
    to {
      left: 100%;
    }
  }
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @keyframes disappear {
    to {
      opacity: 0;
    }
  }

  @keyframes blink {
    to {
      background: transparent;
    }
  }
</style>
