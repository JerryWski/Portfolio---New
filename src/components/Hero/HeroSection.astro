---
import { Image } from 'astro:assets';
import mephoto from '../../../public/me.webp';
import Button from '../../utils/Button.astro';
---

<section class='hero-section'>
  <div class='wrapper'>
    <div class='hero-container'>
      <h1 class='hero-heading'>
        Hi, I'm
        <span>Jarek</span>
        Web Developer
      </h1>
      <p class='hero-subheading'>
        Passionate about coding beautiful things, I love my work. Let's
        collaborate and create something amazing!
      </p>
      <Button />
    </div>
    <div class='hero-image--wrapper'>
      <Image
        class='hero-image'
        src={mephoto}
        alt='man-selfie'
        loading={'eager'}
      />
    </div>
  </div>
  <button class='btn-hero'
    ><a class='btn-hero--link' aria-label='link to contact list' href='/'
      >Hire me</a
    >
  </button>
</section>

<style>
  .hero-section {
    padding: 20px;
    height: 100vh;
    max-width: 1440px;
    margin: 0 auto;
    background-color: var(--bg-graff);
    position: relative;
  }
  .hero-section::after,
  .hero-section::before {
    content: '';
    position: absolute;
    background-image: url('/hero-bg2.webp');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center -90px;
    width: 100%;
    transform: scaleX(-1);
    height: 100%;
    z-index: 0;
    opacity: 0.2;
    -webkit-mask-image: linear-gradient(
      to bottom,
      transparent 1%,
      #256435 40%,
      transparent
    );
    mask-image: linear-gradient(
      to bottom,
      transparent 1%,
      #256435 15%,
      transparent
    );
    top: 80px;
    left: 0;
  }
  .hero-section::before {
    background-image: url('/wheels.webp');
    animation: glow 6s ease-out infinite both;
    opacity: 0;
  }
  .wrapper {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: 20px;
  }
  .btn-hero {
    display: block;
    margin: 100px auto;
    position: relative;
    width: 78%;
    z-index: 2;
    cursor: pointer;
    padding: 10px 40px;
    border-radius: 15px;
    background-color: var(--green);
    border: none;
  }
  .btn-hero--link {
    text-decoration: none;
    font-family: var(--second-font);
    font-size: 1.5rem;
    color: var(--bg-black);
  }
  .hero-heading {
    font-family: var(--main-font);
    font-weight: 900;
    z-index: 1;
    position: relative;
    font-size: 3rem;
    padding-top: 40px;
    text-wrap: balance;
    line-height: 62px;
  }
  .hero-heading span {
    color: var(--green);
  }
  .hero-subheading {
    color: var(--wh);
    font-weight: 600;
    text-wrap: balance;
    margin-top: 20px;
    position: relative;
    z-index: 1;
    font-family: var(--second-font);
  }
  .hero-image--wrapper {
    max-width: 200px;
    position: relative;
    margin-top: 40px;
  }
  .hero-image {
    position: relative;
    z-index: 2;
    height: auto;
    border-radius: 7px;
    border-bottom-left-radius: 0px;
    border-top-right-radius: 0px;
    width: 100%;
    object-fit: contain;
  }
  .hero-image--wrapper::after {
    content: '';
    position: absolute;
    bottom: -25px;
    left: -40px;
    z-index: 1;
    width: 50%;
    height: 50%;
    border-left: 22px solid var(--grey-font);
    border-bottom: 22px solid var(--green);
    box-sizing: border-box;
  }
  .hero-image--wrapper::before {
    border-right: 22px solid var(--grey-font);
    border-top: 22px solid var(--green);
    content: '';
    position: absolute;
    z-index: 1;
    width: 50%;
    height: 50%;
    top: -31px;
    right: -40px;
    box-sizing: border-box;
  }

  @media (min-width: 900px) {
    .hero-section {
      mask-image: radial-gradient(
        circle,
        rgba(0, 0, 0, 1) 70%,
        rgba(0, 0, 0, 0) 100%
      );
      -webkit-mask-image: radial-gradient(
        circle,
        rgba(0, 0, 0, 1) 90%,
        rgba(199, 146, 146, 0) 100%
      );
    }
    .hero-section::after,
    .hero-section::before {
      top: 40px;
    }
    .hero-container {
      max-width: 60%;
    }
    .btn-hero {
      display: none;
    }
    .hero-heading {
      font-size: 5rem;
      line-height: normal;
    }
    .hero-subheading {
      font-size: 1.5rem;
    }
    .hero-image--wrapper {
      max-width: 300px;
      margin-top: 80px;
    }
  }
  @media (max-width: 674px) {
    .wrapper {
      flex-wrap: wrap;
    }
  }
  @keyframes glow {
    0% {
      opacity: 0.2;
    }
    25% {
      opacity: 0.5;
    }
    50% {
      opacity: 0.8;
    }
    75% {
      opacity: 0.5;
    }
    100% {
      opacity: 0.2;
    }
  }
</style>
