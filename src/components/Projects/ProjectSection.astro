---
import { Icon } from 'astro-icon/components';
import ProjectCards from './ProjectCards.astro';
import { Image } from 'astro:assets';
import bg from '../../assets/projects-bg.webp';
import OthersCards from './OthersCards.astro';
---

<section id='projects' class='projects-container'>
  <div class='bg-img-mobile'></div>
  <Image class='bg-img' loading={'eager'} src={bg} alt='technology circuits lines' />
  <div class='projects-wrapper'>
    <div class='projects-theme-pointer'><Icon name='cogs' />Projects</div>
    <h2 class='projects-header'>
      &lt; /<span class='span-header'>Recent Work</span> &gt;
    </h2>
    <ProjectCards />
    <h3 class='projects-subheader'>
      ... /<span class='span-header'> Other projects</span>
    </h3>
    <OthersCards />
  </div>
</section>

<style>
  .span-header {
    color: var(--green);
  }
  .projects-container {
    padding: 80px 20px 80px;
    color: var(--bg-graff);
    background-color: var(--wh);
    position: relative;
    z-index: 0;
    min-height: 100vh;
    overflow: hidden;
  }
  .bg-img {
    display: none;
  }
  .bg-img-mobile {
    position: absolute;
    background-image: url('/projects-bg-mobile.webp');
    object-fit: contain;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    opacity: .1;
  }
  .projects-container::after {
    position: absolute;
    background: linear-gradient(
      159deg,
      rgb(255, 255, 255) 100%,
      rgb(255, 255, 255) 100%
    );
    -webkit-mask-image: linear-gradient(
      rgba(255, 252, 252, 0.9),
      transparent 100%
    );
    mask-image: linear-gradient(rgba(255, 255, 255, 0.9), transparent 100%);
    z-index: 0;
    content: '';
    top: -20%;
    height: 52%;
    width: 100%;
    left: 0%;
  }
  .projects-theme-pointer {
    display: flex;
    border: 2px solid var(--grey-font);
    width: fit-content;
    padding: 3px 10px;
    border-radius: 7px;
    gap: 5px;
    position: relative;
    z-index: 1;
    align-items: center;
    color: var(--grey-font);
    font-family: var(--second-font);
  }
  .projects-header {
    font-size: 2rem;
    margin-top: 20px;
    margin-bottom: 20px;
    position: relative;
    z-index: 1;
    font-family: var(--main-font);
  }
  .projects-subheader {
    margin-top: 60px;
    font-size: 1.7rem;
    margin-bottom: 20px;
    position: relative;
    z-index: 1;
    font-family: var(--main-font);
  }
  @media (min-width: 900px) {
    .projects-wrapper {
      max-width: 1440px;
      margin-inline: auto;
    }
    .bg-img {
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      display: block;
      z-index: -1;
      opacity: 0.1;
      object-fit: cover;
    }
    .bg-img-mobile {
      display: none;
    }
  }
</style>
