<style>
  .cards-container {
    margin-top: 60px;
    grid-template-columns: repeat(auto-fit,minmax(250px, 1fr));
    display: grid;
    gap: 60px;
  }

  .card {
    border: none;
    border-radius: 15px;
    display: grid;
    padding: 20px 0;
    grid-template-rows: subgrid;
    grid-row: span 3;
  }
  .card.one {
    background-color: var(--bg-graff);
  }
  .card-img {
    object-fit: contain;
    width: 100%;
    height: 100%;
  }
  .card-overtext {
    margin-bottom: 5px;
    font-size: 0.8rem;
    font-family: var(--second-font);
    color: var(--light-grey);
  }
  .card-text {
    margin-top: 10px;
    font-family: var(--second-font);
    font-size: 1.2rem;
  }
  .card-text a {
    color: var(--green);
  }
</style>
