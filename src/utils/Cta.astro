---
import { Icon } from 'astro-icon/components';
---

<div class='cta last'>
  <p>You can check <span class="cta-span">my work </span>also on</p>
  <a aria-label='link to github profile' href='https://github.com/JerryWski'>
    <Icon class='cta-icon' width={70} height={70} name='github2' />
  </a>
</div>

<style>
  .cta.last {
    display: none;
  }
  .cta-span {
    color: var(--green);
  }
  @media (min-width: 610px) {
    .cta.last {
      grid-row: span 3;
      padding: 20px;
      display: grid;
      width: 137%;
      text-align: center;
      align-self: center;
      margin-left: 100px;
      border-radius: 7px;
      /* background-color: var(--bg-graff); */
    }
    .cta.last p {
      text-align: center;
      font-family: var(--main-font);
      font-size: clamp(2rem, 2.2vw, 2.5rem);
      font-weight: 900;
      color: var(--grey-font);
    }
    .cta-icon {
      margin-top: 30px;
      transition: all 0.2s ease-in;
    }
    .cta-icon:hover {
      opacity: 0.7;
    }
  }
</style>
