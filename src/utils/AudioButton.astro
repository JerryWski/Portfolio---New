---

<div class='music'>
  <audio class='audio'>
    <source src='./bg-music2.mp3' type='audio/mp3' />
  </audio>
  <div class='line line1'></div>
  <div class='line line2'></div>
  <div class='line line3'></div>
</div>

<style>
  .music {
    background: url('/music-box.png');
    background-size: auto;
    background-size: 100% 100%;
    width: 2rem;
    height: 2rem;
    position: absolute;
    right: 6.66rem;
    top: -3.5rem;
    z-index: 9;
    cursor: pointer;
  }
  .music .line {
    position: absolute;
    bottom: 0.6rem;
    width: 0.1rem;
    height: 0.8rem;
    background: rgb(188, 201, 16);
  }
  .music .line.line1 {
    height: 1rem;
    left: 1rem;
    animation-delay: 0.8s;
  }
  .music .line.line2 {
    left: 0.48rem;
  }
  .music .line.line3 {
    height: 0.5rem;
    left: 1.5rem;
    animation-delay: 1.2s;
  }
  .on {
    animation: musicline linear 1.5s infinite;
  }
  @media (min-width: 900px) {
    .music {
      width: 3rem;
      height: 3rem;
      right: 3.66rem;
      top: 0;
    }
    .music .line {
      bottom: 0.8rem;
      width: 0.2rem;
      
    }
    .music .line.line1 {
      height: 1.4rem;
      left: 1.4rem;
    }
    .music .line.line2 {
      left: 0.58rem;
    }
    .music .line.line3 {
      left: 2.2rem;
    }
  }

  @keyframes musicline {
    0% {
      height: 0.9rem;
    }
    50% {
      height: 0;
    }
    100% {
      height: 0.9rem;
    }
  }
</style>

<script>
  const audio = document.querySelector('.audio') as HTMLAudioElement | null;
  const musicElement = document.querySelector('.music');
  const lines = document.querySelectorAll('.music .line');

  let isPlaying = false;

  const playPause = () => {
    if (audio) {
      if (isPlaying) {
        audio.pause();
        lines.forEach(line => line.classList.remove('on'));
      } else {
        audio.play();
        lines.forEach(line => line.classList.add('on'));
      }
      isPlaying = !isPlaying;
    }
  };

  if (musicElement) {
    musicElement.addEventListener('click', playPause);
  }
</script>
