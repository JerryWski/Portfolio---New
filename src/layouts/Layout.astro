---
interface Props {
  title: string;
}

const { title = 'Web Developer - Jerry_Wski - Tworzenie Stron WWW' } =
  Astro.props;
---

<!doctype html>
<html lang='pl'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/icon.webp' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --wh: hsl(0, 0%, 100%);
	--bg-black: rgb(5, 5, 5);
  }
  *,
  *::after,
  *::before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  html {
    color: var(--wh);
	background-color: var(--bg-black);
	scroll-behavior: smooth;
  }
  body {
	min-height: 100vh;
  }
  .sticky-body {
    overflow: hidden;
  }
</style>
