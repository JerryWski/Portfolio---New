---
import '../utils/CustomFonts.css';
interface Props {
  title: string;
}

const { title = 'Web Developer - Jerry_Wski - Tworzenie Stron WWW' } =
  Astro.props;
---

<!doctype html>
<html lang='pl'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content=' Profesjonalne tworzenie stron WWW' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/icon.webp' />
    <meta name="google-site-verification" content="HACqCTXLiNnYYtIFkLAXXdw9af_x1iAejtBeFanDWOA" />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --wh: rgb(243, 246, 239);
    --bg-black: rgb(5, 5, 5);
    --bg-graff: rgb(26, 28, 32);
    --gradient: #0cec1fb0;
    --grey-font: #495551;
    --light-grey: hsl(156, 4%, 50.6%);
    --green: rgb(30, 169, 90);
    --main-font: "Orbitron", 'sans-serif';
    --second-font: 'Anonymous Pro', 'sans-serif';
    --x: 0;
    --y:0;
    --typewriterSpeed: 2.5s;
    --typewriterCharacters: 26;
  }
  *,
  *::after,
  *::before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  html {
    color: var(--wh);
    scroll-behavior: smooth;
  }
  body {
    background-color: var(--bg-graff);
    min-height: 100vh;
  }
  .sticky-body {
    overflow: hidden;
  }

  
</style>
